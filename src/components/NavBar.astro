---

const screens = [
    {
        title: 'Inicio',
        href: '/',
        clicked: true
    },
    {
        title: 'Servicios',
        href: '/servicios',
        clicked: false
    },
    {
        title: 'Productos',
        href: '/productos',
        clicked: false
    },
    {
        title: 'Nosotros',
        href: '/nosotros',
        clicked: false
    }
]
---

<nav class="flex h-20 px-10 py-5 justify-between fixed bg-background w-full top-0 z-100 backdrop-blur-lg">
    <a class="flex items-center space-x-5" href="/">
        <img src="/la-casa-de-los-hules-logo.webp" alt="Logo de la casa de los hules" class="rounded" width="80" height="20"/>
        <h2 class="text-2xl text-primary-800 font-black">La Casa de los Hules</h2>
    </a>
    <div class="flex items-center space-x-10">
        <div class="flex items-center space-x-5">
            {
                screens.map(screen => (
                        <a
                            href={screen.href}
                            rel="noopener noreferrer"
                            class={`font-semibold ${screen.clicked && "bg-primary-900 rounded-full px-3 text-center text-white shadow"}`}
                        >
                            {screen.title}
                        </a>
                ))
            }
        </div>
        <a class="button font-semibold text-white bg-primary-900 w-fit px-4 py-2 rounded shadow-lg shadow-primary-800/50 flex items-center">
            Contactar ahora
        </a>
    </div>

</nav>